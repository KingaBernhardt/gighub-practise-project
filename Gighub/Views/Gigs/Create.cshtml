@model Gighub.ViewModels.GigFormViewModel
@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>
<form action="/" method="post">
    <div class="form-group">
        @Html.LabelFor(l=>l.Venue)
        @Html.TextBoxFor(t=>t.Venue, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(l => l.Date)
        @Html.TextBoxFor(t => t.Date, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(l => l.Time)
        @Html.TextBoxFor(t => t.Time, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(l=>l.Genre)
        @Html.DropDownListFor(m=>m.Genre, new SelectList(Model.Genres, "Id", "Name"), "", new { @class = "form-control" })
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
</form>

